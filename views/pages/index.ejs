<html>

<head>
    <!--style>form-popup {display: none; border: 3px solid #f1f1f1; z-index: 9;} form-container {max-width: 300px; padding: 10px; background-color: white;}
     form-container btn {background-color: #4CAF50; color: white; padding: 16px 20px; border: none; cursor: pointer; width: 100%; margin-bottom:10px;  opacity: 0.8;}</style-->
    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css"
        integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
        crossorigin="anonymous"></script>
    <script src="/assets/js/jQuery.js"></script>
    <script type="text/javascript">

        function reloadToken() {
            let u = $("#userToken").val();
            $(location).attr('href', '/?u=' + u)
        }

        function createTask() {
            let u = $("#userToken").val();
            $.post('/createTask',{token: u})
                .done((data) => {
                    $(location).attr('href', '/?u=' + u)
                })
        }

        //To chyba bez sensu...
        function openForm() {
            $.post('/openForm')
        }

    </script>
</head>

<body>

    <!--tutaj kontrolki do ręcznego wczytania tokena, wyświetlenie tokena itp-->
    <nav class="navbar navbar-inverse navbar-fixed-top" style="height:50px">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">#ToDo v0.0.3</a>
            </div>
            <form class="form-inline" style="margin-top:10px;float: right;">
                <input type="text" class="form-control mb-2 mr-sm-2" style="width:500px" id="userToken"
                    value="<%= token %>">
                <button type="button" onclick="reloadToken()" class="btn btn-primary mb-2">Załaduj</button>
            </form>
        </div>
    </nav>

    <main role="main" class="container" style="margin-top:100px">
        <!--tutaj faktyczna aplikacja, single-page, jakiś modal do dodawania zadań-->
        <div class="container">
            <div class="list-group" id="tasks">

                <% for(let task of data.data) { %>
                <li class="list-group-item">
                    <%= task %>
                </li>
                <% } %>
              
                <div class="modal fade" id="modalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header text-center">
                                <h4 class="modal-title w-100 font-weight-bold">Nowe zadanie</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body mx-3">

                                <div class="md-form mb-5">
                                    <i class="fas fa-tag prefix grey-text"></i>
                                    <label data-error="wrong" data-success="right" for="form32">Tytuł</label>
                                    <input type="text" id="form32" class="form-control validate">
                                </div>

                                <div class="md-form mb-5">
                                    <i class="fas fa-tag prefix grey-text"></i>
                                    <label data-error="wrong" data-success="right" for="formPriority">Priorytet</label>
                                    <select class="form-control" id="formPriority">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                      </select>
                                </div>

                                <div class="input-group">
                                    <label for="deadline">Termin</label>
                                    <input type="text" name="idTourDateDetails" id="idTourDateDetails" readonly="readonly" class="form-control clsDatePicker" style="z-index: 100000"> <span class="input-group-addon"><i id="calIconTourDateDetails" class="glyphicon glyphicon-th"></i></span>
                                </div>

                                <div class="md-form">
                                    <i class="fas fa-pencil prefix grey-text"></i>
                                    <label data-error="wrong" data-success="right" for="form8">Treść zadania</label>
                                    <textarea type="text" id="form8" class="md-textarea form-control" rows="4"></textarea>
                                </div>

                            </div>
                            <div class="modal-footer d-flex justify-content-center">
                                <button class="btn btn-primary mb-2" onclick="createTask()">Zatwierdź<i class="fas fa-paper-plane-o ml-1"></i></button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <a href="" class="btn btn-primary mb-2" data-toggle="modal" data-target="#modalForm">Dodaj zadanie</a>
                </div>
        </div>
    </main>

</body>

</html>